#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

exec "$ceh_ghc_root/bin/ghc-mod", "-g", "-package-db=$ceh_ghc_root/lib/ghc-7.6.3/package.conf.d", @ARGV;
