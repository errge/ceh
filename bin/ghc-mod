#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;

path_prepend('/nix/var/nix/profiles/ceh/ghc-libs/lib', 'LD_LIBRARY_PATH');

exec "$ceh_ghc_root/bin/ghc-mod", "-g", "-package-db=$ceh_ghc_root/lib/ghc-7.6.3/package.conf.d", @ARGV;
