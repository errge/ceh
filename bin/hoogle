#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use CehInstall;

ceh_nixpkgs_install('haskellPackages.hoogle', nixpkgs_version => '3d74b3810104878527f0fde8aad65908579a504e', out => 'c0l8f6v7cwzcjizskkf54mn3j42q46kd-haskell-hoogle-ghc7.8.3-4.2.36-shared');

chdir "$ENV{HOME}/.hoogle";
exec "$ceh_nix_install_root/bin/hoogle", @ARGV;
