#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use CehInstall;

ceh_nixpkgs_install('haskellPackages.hoogle', nixpkgs_version => 'e07ea5cf77601325b16f51fb457b90d5aadfab6f', out => 'k9nkjxyg0d6dw5scdvkypn0c576rm78f-haskell-hoogle-ghc7.8.4-4.2.36-shared');

chdir "$ENV{HOME}/.hoogle";
exec "$ceh_nix_install_root/MAIN/bin/hoogle", @ARGV;
