#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use CehInstall;

ceh_nixpkgs_install('haskellPackages.hoogle', nixpkgs_version => 'a38ae3c9367f9b5b2c4df437b97f3fcff294b9f7', out => 'bv3hbra3bblyh33i1649j8fmlz9shhgj-haskell-hoogle-ghc7.8.3-4.2.34-shared');

chdir "$ENV{HOME}/.hoogle";
exec "$ceh_nix_install_root/bin/hoogle", @ARGV;
