#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages.cabalGhci', nixpkgs_version => '0852d9e3643458ebd435b366bb3ecd79b0f47400', out => 'ra19j148rsk5qrd5kvyrc38xag43fj8b-haskell-cabal-ghci-ghc7.8.3-0.3-shared');

exec "$ceh_nix_install_root/bin/cabal-ghci", @ARGV;
