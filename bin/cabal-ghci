#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages.cabalGhci', nixpkgs_version => 'a38ae3c9367f9b5b2c4df437b97f3fcff294b9f7', out => '1zrwks5f7j2kh1i1jb32bd5s2ci4ky54-haskell-cabal-ghci-ghc7.8.3-0.3-shared');

exec "$ceh_nix_install_root/bin/cabal-ghci", @ARGV;
