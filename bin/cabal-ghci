#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages.cabalGhci', nixpkgs_version => '3d74b3810104878527f0fde8aad65908579a504e', out => '0cr8ik4p8v2fqf3a3cvvs8wyamayw49h-haskell-cabal-ghci-ghc7.8.3-0.3-shared');

exec "$ceh_nix_install_root/bin/cabal-ghci", @ARGV;
