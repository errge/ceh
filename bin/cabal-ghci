#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages.cabalGhci', nixpkgs_version => 'f666bf4ddf3f5f50cad6e17907dae53d545444d0', out => '5ddq7b0iq6v3kvggn5jnz4vr8ykq5kmy-haskell-cabal-ghci-ghc7.6.3-0.3');

exec "$ceh_nix_install_root/bin/cabal-ghci", @ARGV;
