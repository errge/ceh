#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages.cpphs', nixpkgs_version => '0852d9e3643458ebd435b366bb3ecd79b0f47400', out => '22c80mjnf37ixy8ngfs0w9zv24pbwx2x-haskell-cpphs-ghc7.8.3-1.18.5-shared');

exec "$ceh_nix_install_root/bin/cpphs", @ARGV;
