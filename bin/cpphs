#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages.cpphs', nixpkgs_version => 'a38ae3c9367f9b5b2c4df437b97f3fcff294b9f7', out => 'y7zy9z9gc569vkvgphqj86rikkrbwgvr-haskell-cpphs-ghc7.8.3-1.18.5-shared');

exec "$ceh_nix_install_root/bin/cpphs", @ARGV;
