#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

# A patched version of git with enough threads and prefetch to be
# efficient over AFS.

use strict;
use warnings;
use lib "/opt/ceh/lib";
use CehInstall;

$ENV{NIXPKGS_CONFIG}="/opt/ceh/lib/Packages/git_afs.nix";
ceh_nixpkgs_install("git_afs", autoinit => 1);
exec "$ceh_nix_install_root/bin/git", @ARGV;
