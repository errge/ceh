#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::TWS;

my $version = $ARGV[0];
if ($version && $version eq "--version") {
    if (-x "$ceh_nix_install_root/MAIN/bin/tws-ui") {
	print "TWS successfully installed: $ceh_nix_install_root\n";
	exit 0;
    } else {
	exit 1;
    }
}

exec "$ceh_nix_install_root/MAIN/bin/tws-ui", @ARGV;
