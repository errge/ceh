#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages.c2hs', nixpkgs_version => 'f666bf4ddf3f5f50cad6e17907dae53d545444d0', out => 'hgxla0ggixdy7dv7pdzif8f5j8ap6dwv-c2hs-0.17.2');

exec "$ceh_nix_install_root/bin/c2hs", @ARGV;
