#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages.c2hs', nixpkgs_version => 'a38ae3c9367f9b5b2c4df437b97f3fcff294b9f7', out => '527p97mfz51hgla63dy96sva3ywbys8j-c2hs-0.17.2');

exec "$ceh_nix_install_root/bin/c2hs", @ARGV;
