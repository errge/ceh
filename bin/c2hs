#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages.c2hs', nixpkgs_version => '551296a1cec0b9751ab96c420a7481e322ea127d', out => 'bcdkal6pzbfgyr6zcz4xr52bnwj0311y-c2hs-0.28.1');

exec "$ceh_nix_install_root/MAIN/bin/c2hs", @ARGV;
