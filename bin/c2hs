#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages.c2hs', nixpkgs_version => '3d74b3810104878527f0fde8aad65908579a504e', out => '07v22mdz5scvlbiyn8g5bksvvsrw85w0-c2hs-0.20.1');

exec "$ceh_nix_install_root/bin/c2hs", @ARGV;
