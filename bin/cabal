#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages_ghc783.cabalInstall', nixpkgs_version => '3d74b3810104878527f0fde8aad65908579a504e', out => '4hxjrk7s03bk1wjhbkqf59y043kwcqyf-cabal-install-1.20.0.3');

exec "$ceh_nix_install_root/bin/cabal", @ARGV;
