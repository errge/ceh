#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages_ghc783.cabalInstall', nixpkgs_version => 'a38ae3c9367f9b5b2c4df437b97f3fcff294b9f7', out => '3gmmqc3m4l962j4j9pdb9j8zr9hm0y9d-cabal-install-1.20.0.3');

exec "$ceh_nix_install_root/bin/cabal", @ARGV;
