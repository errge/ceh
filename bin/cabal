#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages.cabal-install', nixpkgs_version => '551296a1cec0b9751ab96c420a7481e322ea127d', out => 'r2d64lx491gz7v7vq1l7zlgpw66ii85d-cabal-install-1.22.9.0');

exec "$ceh_nix_install_root/MAIN/bin/cabal", @ARGV;
