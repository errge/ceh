#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use Packages::GHC;
use CehBase;
use CehInstall;

foreach my $l (@ceh_ghc_libs) { path_prepend($l, 'LD_LIBRARY_PATH'); }

ceh_nixpkgs_install('haskellPackages.cabalInstall', nixpkgs_version => 'e07ea5cf77601325b16f51fb457b90d5aadfab6f', out => '0yzsy3wmq8y06vgaz2a2yfah3vfhsiqb-cabal-install-1.22.0.0');

exec "$ceh_nix_install_root/MAIN/bin/cabal", @ARGV;
