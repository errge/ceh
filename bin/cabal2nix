#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use CehBase;
use CehInstall;

ceh_nixpkgs_install('haskellPackages.cabal2nix', nixpkgs_version => 'e07ea5cf77601325b16f51fb457b90d5aadfab6f', out => '1h5drl9vni2z68vngjygb6xdasy3890c-cabal2nix-1.73');

unless (exists $ENV{NIX_PATH}) {
    $ENV{NIX_PATH} = 'nixpkgs=/opt/ceh/nixpkgs/' . $CEH_BASELINE_NIXPKGS;
}

exec "$ceh_nix_install_root/MAIN/bin/cabal2nix", @ARGV;
