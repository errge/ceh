#!/opt/ceh/lib/perl
# -*- mode: perl; -*-

use strict;
use warnings;
use lib "/opt/ceh/lib";
use CehBase;
use CehInstall;

ceh_nixpkgs_install('haskellPackages.cabal2nix', nixpkgs_version => '551296a1cec0b9751ab96c420a7481e322ea127d', out => 'fyxwb94w9icj7sbqx9fwj2rbv19xlagh-cabal2nix-20160406');

unless (exists $ENV{NIX_PATH}) {
    $ENV{NIX_PATH} = 'nixpkgs=/opt/ceh/nixpkgs/' . $CEH_BASELINE_NIXPKGS;
}

exec "$ceh_nix_install_root/MAIN/bin/cabal2nix", @ARGV;
